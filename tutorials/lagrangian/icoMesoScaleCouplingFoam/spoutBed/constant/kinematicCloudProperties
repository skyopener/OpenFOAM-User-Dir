solution
{
    active          true;
    coupled         true;
    transient       yes;
    cellValueSourceCorrection off;

    interpolationSchemes
    {
        rho             cell;
        U               cellPoint;
        mu              cell;
//        DUcDt           cell;
    }

    integrationSchemes
    {
        U               Euler;
    }
    
    sourceTerms
    {
        schemes
        {
            U    semiImplicit 1;
        }
    }
}

constantProperties
{
    rho0            2700;
    youngsModulus   1e6;
    poissonsRatio   0.25;
}

